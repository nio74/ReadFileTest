{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "leggifile",
			"type": "shell",
			"command": "/usr/bin/clang++",
			"args": [
				
					"-std=c++17",
					"-stdlib=libc++",
					"-g",
					"${file}",
					"-o",
					"${fileDirname}/${fileBasenameNoExtension}"
				  ],
				  "options": {
					"cwd": "${workspaceFolder}"
				  },
				  "problemMatcher": ["$gcc"],
				  "group": {
					"kind": "build",
					"isDefault": true
				  }
				}
			  ]
			}